<% if @stats.total: %>
<span class="todo-count">
<span class="number"><%= @stats.remaining %></span>
<span class="word"><% if @stats.remaining is 1: %>item<% else: %>items<% end %></span> left.
</span>
<% end %>
<% if @stats.done: %>
<span class="todo-clear">
<a href="#">
Clear <span class="number-done"><%= @stats.done %></span>
completed <span class="word-done"><% if @stats.done is 1: %>item<% else: %>items<% end %></span>
</a>
</span>
<% end %>
