<div class="todo <% if @todo.done: %>done<% end %>">
<div class="display">
<input class="check" type="checkbox" <% if @todo.done: %>checked="checked"<% end %>>
<div class="todo-content"><%= @todo.content %></div>
<span class="todo-destroy"></span>
</div>
<div class="edit">
<input class="todo-input" type="text" value="<%= @todo.content %>">
</div>
</div>
